<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cad.halstart.MainActivity">

    <Button
        android:id="@+id/btnScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40"
        android:onClick="scanOnClick"
        android:text="Scan"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="143dp" />

    <TextView
        android:id="@+id/txtBarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="10dp"
        android:layoutDirection="locale"
        android:text="The dark knight returns"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPrint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:onClick="printOnClick"
        android:text="Print"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="322dp" />

    <Button
        android:id="@+id/btnStartFw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40"
        android:onClick="startFileWatcher"
        android:text="Start FileWatcher"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="322dp" />
    <Button
        android:id="@+id/btnStopFw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:onClick="stopFileWatcher"
        android:text="Stop FileWatcher"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="322dp" />

    <Button
        android:id="@+id/btnCreateScanFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:onClick="onClickCreateScanFile"
        android:text="CreateScanFile"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="322dp" />
    <Button
        android:id="@+id/btnDeleteScanFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:onClick="onClickDeleteScanFile"
        android:text="DeleteScanFile"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="322dp" />

</LinearLayout>
